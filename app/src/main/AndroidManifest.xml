<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.bako">

    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Bako"
            android:name=".Bako">
        <activity
                android:name=".view.settings.SettingsActivity"
                android:label="@string/title_activity_settings">
        </activity>
        <activity
                android:name=".view.settings.workcode.CodesListActivity"
                android:label="@string/title_activity_settings">
        </activity>
        <activity android:name=".view.navigation.fragment.calendar.popup.AddCodeToPlanningFragment"></activity>
        <activity android:name=".view.navigation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver android:name=".view.navigation.fragment.AlarmFragment$MyAlarm"></receiver>
    </application>

</manifest>