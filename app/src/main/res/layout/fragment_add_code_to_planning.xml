<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/updateWorkCodeOfCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_baseline_edit_24"
            android:background="@color/colorAccent" app:backgroundTint="@color/colorAccent"
            app:rippleColor="@color/textColor"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addWorkCodeOfCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/ic_baseline_post_add_24"
            android:visibility="invisible"
            android:background="@color/colorAccent" app:backgroundTint="@color/colorAccent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/openCloseManagementWorkCodeOfCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/ic_baseline_add_24"
            android:focusable="true"
            android:background="@color/colorAccent" app:backgroundTint="@color/colorAccent"/>
    <!--app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"-->
</LinearLayout>