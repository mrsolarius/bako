<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">
        <EditTextPreference
            app:key="nbHeureSup"
            app:title="Nombre d'heure supplémentaire"
            app:defaultValue="0" />

        <EditTextPreference
            app:key="nbHeureAnnuel"
            app:title="Nombre d'heure annuel"
            app:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">
        <EditTextPreference
            app:key="nbHeureAnnuel"
            app:title="Nombre d'heure congés restants"
            app:defaultValue="0" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Theme">

        <SwitchPreference
            app:key="@string/themeKey"
            app:title="@string/themeTitle"
            app:defaultValue="@bool/pref_show_default" />
        
    </PreferenceCategory>

</PreferenceScreen>