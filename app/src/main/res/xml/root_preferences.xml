<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">
        <EditTextPreference
                app:key="nbHoursSupp"
                app:title="@string/nb_hours_supp"
                app:defaultValue="false"/>

        <EditTextPreference
                app:key="nbHoursAnnual"
                app:title="@string/nb_hours_annual"
                app:defaultValue="0"/>

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/edit_codes">
        <Preference
                app:title="@string/edit_work_code"
                app:key="startWorkCode"/>
        <Preference
                app:title="@string/edit_vacation_code"
                app:key="startVacationCode"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="Theme">
        <SwitchPreference
                app:key="@string/themeKey"
                app:title="@string/themeTitle"
                app:defaultValue="@bool/islightOrNightTheme"/>
    </PreferenceCategory>

</PreferenceScreen>